{
  "name": "ekstra-router-setup",
  "version": "1.0.0",
  "description": "Ekstra AI Router Setup - Easy onboarding for vending machine operators",
  "main": "src/main/index.js",
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "lint": "eslint src/",
    "test": "jest"
  },
  "author": "Ekstra AI",
  "license": "UNLICENSED",
  "private": true,
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.56.0"
  },
  "dependencies": {
    "axios": "^1.6.5",
    "form-data": "^4.0.0"
  },
  "build": {
    "appId": "ai.ekstra.router-setup",
    "productName": "Ekstra Router Setup",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "firmware/manifest.json"
    ],
    "extraResources": [
      {
        "from": "firmware",
        "to": "firmware",
        "filter": ["**/*.bin", "manifest.json"]
      }
    ],
    "win": {
      "target": ["nsis", "portable"],
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": ["dmg"],
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": ["AppImage"],
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    }
  }
}
